{
  "HomeAssistant": {
    "Host": "<HostnameOrIPOfHomeAssistant>",
    "Port": 8123,
    "Ssl": false,
    "Token": "<LongLivedAccessToken>"
  },
  "Mqtt": {
    "Host": "<HostnameOrIPOfMqttBroker>",
    "Port": "1883",
    "UserName": "<MqttUsername>",
    "Password": "<MqttPassword>"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning"
    },
    "ConsoleThemeType": "Ansi"
  },
  "NetDaemon": {
    "ApplicationConfigurationFolder": "./apps"
  }
}
